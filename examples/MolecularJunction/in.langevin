#Initialization

units         metal
atom_style    full
dimension     3
boundary      p  p  p 

variable     T     equal 200

#Atom definition 

read_data  MJ14.data

#Force  field

pair_style   rebo
pair_coeff * * /opt/lammps/potentials/CH.airebo C H 

#Settings

timestep 0.000329

neighbor 1.0 bin
neigh_modify  delay 5 every 1 check yes 

#Region definition

#define reg_all excluding fixed boundary
region reg_all block      -0.028747258    63.871252742    -0.677382746    19.002617254   -0.744804367    14.255195633   units box
region reg_0   block      -0.028747258    7.781752742     -0.677382746    19.002617254   -0.744804367    14.255195633   units box
region reg_1   block      7.781752742     16.301752742    -0.677382746    19.002617254   -0.744804367    14.255195633   units box
region reg_6   block      47.540752742    56.060752742    -0.677382746    19.002617254   -0.744804367    14.255195633   units box
region reg_7   block      56.060752742    63.871252742    -0.677382746    19.002617254   -0.744804367    14.255195633   units box
#Group definition

group g_0      region   reg_0
group g_1      region   reg_1
group g_6      region   reg_6
group g_7      region   reg_7
group g_all    region   reg_all
group g_NVE    subtract g_all g_0 g_1 g_6 g_7 
group g_NVT    subtract g_all g_0 g_7

# Put fixed boundary condition on edge atoms by setting forces to zero

fix g_0 g_0 setforce 0 0 0
fix g_7 g_7 setforce 0 0 0

velocity  g_NVT  create  $T 87287 mom yes rot yes dist gaussian 

#Define compute for temperature calculation 

compute  1     all    temp/region   reg_1
compute  6     all    temp/region   reg_6

fix g_l g_1 setforce 0 0 0 
fix g_r g_6 setforce 0 0 0 

min_style cg 
minimize 1e-25 1e-25 5000 10000

unfix g_l
unfix g_r
